<div class="container">
  <h2>Phase Engineers</h2>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th colspan="1"></th>

      </tr>
    </thead>
    <tbody>
      <% @phaseusers.each do |user| %>
      <tr>
        <th scope="row"><%= user.user_id %></th>
        <% u = User.find(user.user_id) %>
        <td><%= u.name %></td>
        <td><%= u.email %></td>
        <% Rails.cache.write("user_id",user.user_id)%>
        <td><%= link_to 'Remove Engineer', addengineers_lead_phase_path(:user_id => user.user_id),method: :delete,data: { confirm: "Are you sure?"} %></td>    
      </tr>
      <% end %>
    </tbody>
  </table>


<br/>
<%= form_with do |form| %>
  <div class="form-group">
    <h5><b><%= form.label :Engineers %></b></h5>
    <%= form.select :Engineer, @engineers , class:"form-control" %>
  </div>
  <div>
    <%= form.submit "Add Engineer" ,class:"btn btn-dark"%>
  </div>
<% end %>